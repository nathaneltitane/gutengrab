		["Sundanese"]="su"
		["Swahili"]="sw"
		["Swati"]="ss"
		["Swedish"]="sv"
		["Tagalog"]="tl"
		["Tahitian"]="ty"
		["Tajik"]="tg"
		["Tamil"]="ta"
		["Tatar"]="tt"
		["Telugu"]="te"
		["Thai"]="th"
		["Tibetan"]="bo"
		["Tigrinya"]="ti"
		["Tonga"]="to"
		["Tsonga"]="ts"
		["Tswana"]="tn"
		["Turkish"]="tr"
		["Turkmen"]="tk"
		["Twi"]="tw"
		["Uighur"]="ug"
		["Ukrainian"]="uk"
		["Urdu"]="ur"
		["Uzbek"]="uz"
		["Venda"]="ve"
		["Vietnamese"]="vi"
		["Volapük"]="vo"
		["Walloon"]="wa"
		["Welsh"]="cy"
		["Western Frisian"]="fy"
		["Wolof"]="wo"
		["Xhosa"]="xh"
