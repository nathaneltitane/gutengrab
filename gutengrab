		["Inuktitut"]="iu"
		["Inupiaq"]="ik"
		["Irish"]="ga"
		["Italian"]="it"
		["Japanese"]="ja"
		["Javanese"]="jv"
		["Kannada"]="kn"
		["Kanuri"]="kr"
		["Kashmiri"]="ks"
		["Kazakh"]="kk"
		["Khmer"]="km"
		["Kikuyu"]="ki"
		["Kinyarwanda"]="rw"
		["Komi"]="kv"
		["Kongo"]="kg"
		["Korean"]="ko"
		["Kurdish"]="ku"
		["Kwanyama"]="kj"
		["Kyrgyz"]="ky"
		["Lao"]="lo"
		["Latin"]="la"
		["Latvian"]="lv"
		["Limburgish"]="li"
		["Lingala"]="ln"
		["Lithuanian"]="lt"
		["Luba-Katanga"]="lu"
		["Luxembourgish"]="lb"
		["Macedonian"]="mk"
		["Malagasy"]="mg"
		["Malay"]="ms"
		["Malayalam"]="ml"
		["Maltese"]="mt"
		["Manx"]="gv"
		["Maori"]="mi"
		["Marathi"]="mr"
		["Marshallese"]="mh"
		["Mongolian"]="mn"
		["Nauru"]="na"
		["Navajo"]="nv"
		["Ndonga"]="ng"
		["Nepali"]="ne"
		["North Ndebele"]="nd"
		["Northern Sami"]="se"
		["Norwegian Bokmål"]="nb"
		["Norwegian Nynorsk"]="nn"
		["Norwegian"]="no"
		["Occitan"]="oc"
		["Ojibwa"]="oj"
		["Oriya"]="or"
